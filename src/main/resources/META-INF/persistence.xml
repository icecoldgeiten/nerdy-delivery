<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/persistence/persistence_2_1.xsd">
    <persistence-unit name="ice-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.route.entity.Administrator</class>
        <class>com.route.entity.Customer</class>
        <class>com.route.entity.Driver</class>
        <class>com.route.entity.Employee</class>
        <class>com.route.entity.Order</class>
        <class>com.route.entity.Orderline</class>
        <class>com.route.entity.Person</class>
        <class>com.route.entity.Route</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/nerdygadgets"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
